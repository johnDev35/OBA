<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarCategoriaActivity">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="359dp"
        android:layout_height="675dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/formRegistro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Registro Categoría"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgVCate"
                    android:layout_width="wrap_content"
                    android:layout_height="97dp"
                    android:layout_gravity="center"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/btngaleria1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@drawable/ic_search_img"
                    android:text="Seleccionar Icono Categoría" />

                <EditText
                    android:id="@+id/cate1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nombre Categoría"
                    android:gravity="center"
                    android:textColorHint="#A4B5B4"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/marc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Marca"
                    android:gravity="center"
                    android:textColorHint="#A4B5B4"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


                    <Button
                        android:id="@+id/btnregistrarCate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registrar Categoria" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>